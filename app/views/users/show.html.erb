<div class="container-fluid bg-main h-100">
  <div class="row h-100">
    <div class="col-md-3 offset-md-2">
      <div class="login-surface mt-3">
        <div class="row no-gutters">
            <div class="col-3">
                <%= image_tag "logo_stripped.png", class: "w-75"%>
            </div>
            <div class="col-9">
                <h4 class="mb-0"><%= @user.name%></h4>
                <span class="profile-posts-length"><%= @user.microposts.count %></span>
                <span class="profile-posts-label"><%= "post".pluralize(@user.microposts.count)%></span>
            </div>
        </div>  
        <%= render 'follow_stats'%>
        <% if @user.id != current_user.id %>
           <%= render 'follow_form' if signed_in? %>
        <% end %>
      </div>  
    </div>
        <div class="col-md-6">
          <div class="login-surface mt-3">
            <% if @user.microposts.any? %>
              <span class="h4-reg pr-2"><%= "#{@user.name}'s posts" %></span>
              <ol class="microposts pt-3">
                <%= render @microposts %>
              </ol>
            <% end %>
        </div>
    </div>
  </div>
</div>
