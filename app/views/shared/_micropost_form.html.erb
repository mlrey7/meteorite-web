<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <div class="form-group mt-5">
    <%= f.text_area :content, placeholder: "What's poppin'?", class: "form-control micropost-text-area" %>
  </div>
  <div class="d-flex">
      <%= f.submit "Post", class: "btn btn-primary action-btn mr-2 px-5" %>
  <span class="picture">
  <input accept="image/jpeg,image/gif,image/png" type="file" name="micropost[picture]" id="micropost_picture" class="micropost_picture"/>
  <label for="micropost_picture" class="custom-file-upload">
             <span class="oi oi-image" title="image" aria-hidden="true"></span> Upload Pic
  </label>
  </span>
  </div>

<% end %>

